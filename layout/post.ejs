<%- partial("partial/topbar") %>
<main>
    <div class="left-sidebar">
        <% if (theme.toc && page.toc) { %>
            <p style="text-align: center; font-weight: bold;">目录</p>
            <%- toc(page.content, {list_number: false}) %>
        <% } %>
    </div>

    <article class="main-content">
        <h1 style="text-align: center;" id="top-title"><%= page.title %></h1>
        <%- page.content %>
    </article>

    <div class="right-sidebar">
        <% if (page.tags.length > 0) { %>
            <%- partial("partial/tags-list", {tags: page.tags}) %>
        <% } %>
        <% if (page.categories.length > 0) { %>
            <%- partial("partial/categories-list", {categories: page.categories}) %>
        <% } %>
    </div>
</main>
