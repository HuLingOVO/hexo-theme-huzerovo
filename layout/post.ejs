<%# 文章 %>

<%# 描述：这个文件展示一篇完整的文章 %>
<%# 这个文件不接收参数 %>

<%- partial("partial/topbar") %>
<div id="article-toc">
<% if (theme.toc && page.toc) { %>
    <p class="sidebar-list-title"><%= _p("toc") %></p>
    <%- toc(page.content, {list_number: false}) %>
<% } %>
</div>
<main>
    <div class="container">
        <%# 文章主要内容 %>
        <article class="article-container">
            <h1><%= page.title %></h1>
            <%- page.content %>
        </article>
        <%# 文章的标签与分类 %>
        <div class="article-meta-info">
            <% if (page.tags.length > 0) { %>
                <span><%= _p("categories") %></span>
                <%- list_categories(page.categories, {show_count: false}) %>
            <% } %>    
            <% if (page.categories.length > 0) { %>
                <span><%= _p("tags") %></span>
                <%- list_tags(page.tags, {show_count: false}) %>
            <% } %>
        </div>
        <%# 文章的发布/更新日期 %>
        <div class="article-date-info">
            <span><%= _p("publish") %>: <%= page.date.format("YYYY-MM-DD") %></span>
            <span><%= _p("last_update") %>: <%= page.updated.format("YYYY-MM-DD") %></span>
        </div>
        <div class="article-comment">
            <%- partial('partial/gitalk') %>
        </div>
    </div>
</main>
