<%# 顶栏 %>

<%# 描述：网站顶栏 %>
<%# 传入参数：active %>
<%# 类型：string %>
<%# 意义：当前页面名称，表示高亮正在活跃的页面 %>

<header class="topbar">
    <div class="topbar-container">
        <%# 左侧的页面导航 %>
        <nav class="topbar-menu">
            <ul>
            <% for (let i in theme.menu) { %>
                <li>
                <%# 在一些页面里不会传入active，表明无需高亮，需要判断一下 %>
                <% if (typeof active !== 'undefined' && i === active) { %> 
                    <%- link_to(theme.menu[i], _p(i), {id: "active-page"}) %>
                <% } else { %>
                    <%- link_to(theme.menu[i], _p(i)) %>
                <% } %>
                </li>
            <% } %>
            </ul>
        </nav>

        <%# 右侧的一些图标按钮 %>
        <div class="topbar-icon-buttons">
            <button id="btn-switch-theme" class="icon-button">
                <i class="bi bi-sun"></i>
            </button>
            <a id="btn-search" class="icon-button" href="/search">
                <i class="bi bi-search"></i>
            </a>
        </div>
    </div>
</header>
